@using FunWithAspNetCoreMvc.Models
@model List<CompanyPlainModel>
<!--This is our View in terms of MVC-->
<!doctype html>
<html>
<head>
    <!--Symbols ~ means that the application will use a special path for retrieving these styles.
        In our case it's wwwroot-->
    <link href="~/style.css" rel="stylesheet" />
    <title>@ViewData["company"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    @foreach (var item in Model)
    {
        <h1>@item.CompanyName</h1>
        <h2>Employees: @item.NumberOfEmployees</h2>
        <h2>Total salary: @(item.NumberOfEmployees * item.AverageSalaryAmount)</h2>
    }
</body>
</html>